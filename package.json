{
    "name": "allowance-controls-refactored",
    "private": true,
    "sideEffects": false,
    "type": "module",
    "scripts": {
        "build": "prisma generate && remix build",
        "dev": "remix dev --manual",
        "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
        "postinstall": "prisma generate",
        "start": "remix-serve ./build/index.js",
        "typecheck": "tsc",
        "db-seed": "NODE_ENV=development prisma db seed",
        "db-nuke": "prisma db push --force-reset && docker-compose down --volumes --remove-orphans",
        "setup-dev": "docker-compose up -d && npx prisma generate && npx prisma db push && yarn db-seed"
    },
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    },
    "dependencies": {
        "@prisma/client": "^5.7.1",
        "@remix-run/css-bundle": "^2.4.1",
        "@remix-run/node": "^2.4.1",
        "@remix-run/react": "^2.4.1",
        "@remix-run/serve": "^2.4.1",
        "@remix-validated-form/with-zod": "^2.0.7",
        "isbot": "^3.6.8",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "remix-utils": "^7.4.0",
        "remix-validated-form": "^5.1.5",
        "zod": "^3.22.4",
        "zod-form-data": "^2.0.2"
    },
    "devDependencies": {
        "@remix-run/dev": "^2.4.1",
        "@types/react": "^18.2.20",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "prettier": "^3.1.1",
        "prettier-plugin-organize-imports": "^3.2.4",
        "prisma": "^5.7.1",
        "tsx": "^4.7.1",
        "typescript": "^5.1.6"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
